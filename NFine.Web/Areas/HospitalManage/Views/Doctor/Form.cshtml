}
<script>
    var keyValue = $.request("keyValue");

    var lastBtn = null;
    var thisBtn = null;
    var nextBtn = null;

    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Role/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    })

    function initControl() {
        $("#Gender").bindSelect();
        $("#Category").bindSelect();
        $("#OrderType").bindSelect();

        //添加事件
        addSegmentation();

        $("#F_OrganizeId").bindSelect({
            url: "/SystemManage/Organize/GetTreeSelectJson",
        });
        $("#F_Type").bindSelect({
            url: "/SystemManage/ItemsData/GetSelectJson",
            param: { enCode: "RoleType" }
        });
        $('#wizard').wizard().on('change', function (e, data) {
            var $finish = $("#btn_finish");
            var $next = $("#btn_next");
            if (data.direction == "next") {
                switch (data.step) {
                    case 1:
                        if (!$('#step-1').Validform()) {
                            return false;
                        }
                        $finish.hide();
                        $next.show();
                        break;
                    case 2:
                        if (!$('#step-2').Validform()) {
                            return false;
                        }
                        $finish.hide();
                        $next.show();
                        break;
                    case 3:
                        if (!$('#step-3').Validform()) {
                            return false;
                        }

                        $finish.hide();
                        $next.show();
                        break;
                    case 4:
                        if (!$('#step-4').Validform()) {
                            return false;
                        }
                        $finish.show();
                        $next.hide();
                        break;
                    default:
                        break;
                }
            } else {
                $finish.hide();
                $next.show();
            }
        });
    }

    function submitForm() {

        var postData = $("#form1").formSerialize();
        postData["permissionIds"] = String($("#permissionTree").getCheckedNodes());
        $.submitForm({
            url: "/SystemManage/Role/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }

    //添加分段
    function addSegmentation() {
        //所有添加按钮添加事件
        $("#form1 .form").on("click", ".addSegmentation", function () {



            var form = $(this).parent().parent().parent();
            var html = '<tr>';
            html += '<th class="formTitle" > 时间段</th>';
            html += '    <td class="formValue">';
            html += '        <div style="float: left; width: 45%;">';
            html += '            <input id="StartTime1" readonly type="text" value="8:30" class="form-control input-wdatepicker" isvalid="yes" checkexpession="NotNull" onfocus="WdatePicker({dateFmt:\'HH: mm\'})">';
            html += '                </div>';
            html += '            <div style="float: left; width: 10%; text-align:center;line-height:35px;  height:35px">至</div>';
            html += '            <div style="float: left; width: 45%;">';
            html += '                <input id="EndTime1" readonly type="text" value="8:30" class="form-control input-wdatepicker" isvalid="yes" checkexpession="NotNull" onfocus="WdatePicker({dateFmt:\'HH: mm\'})">';
            html += '                </div>';
            html += '            </td>';
            html += '           <th class="formTitle">预约数量</th>';
