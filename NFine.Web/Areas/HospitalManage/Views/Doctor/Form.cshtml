            html += '                </div>';
            html += '<div style="float: left; width: 40%; margin-left:20px;">';
            html += '    <a class="btn btn-success addSegmentation"><i class="fa fa-plus"></i>&nbsp;添加</a>';
            html += '    <a class="btn btn-danger addSegmentation"><i class="fa fa-trash-o"></i>&nbsp;删除</a>';
            html += '</div>';
            html += '            </td>';
            html += '        </tr>';

            $(form).after(html);

            //查找下一个按钮
            var nextBtn = $(form).next().find(".addSegmentation");


            lastBtn = $(form).prev();

            //上一个按钮
            if ($(lastBtn).html() != undefined) {
                var btn = $(lastBtn).find(".addSegmentation");
                btn.removeClass("btn-success");
                btn.addClass("btn-danger");
                var pic = $(btn).find(".fa-plus");
                pic.removeClass(".fa-plus");
                pic.addClass("fa-trash-o");

            }

            //下一个按钮
            //if ($(lastBtn).html() != undefined) {
            //    var btn = $(lastBtn).find(".addSegmentation");
            //    btn.removeClass("btn-success");
            //    btn.addClass("btn-danger");
            //    var pic = $(btn).find(".fa-plus");
            //    pic.removeClass(".fa-plus");
            //    pic.addClass("fa-trash-o");

            //}


        });
    }

